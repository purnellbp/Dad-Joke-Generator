# Unsplash API - Get from https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=your_unsplash_access_key
UNSPLASH_SECRET_KEY=your_unsplash_secret_key

# OpenAI API - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key
OPENAI_ASSISTANT_ID=your_assistant_id

# AI Models
AI_MODEL_INTELLIGENT=gpt-4o
AI_MODEL_FAST=gpt-4o-mini

# Rate Limiting
NEXT_PUBLIC_RATE_LIMIT_DURATION=1
RATE_LIMIT_DURATION=30
MAX_REQUESTS_PER_WINDOW=5

# Redis Configuration (for local development)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Vercel KV (for production)
# Get these from Vercel dashboard: Project Settings -> Storage -> KV Database
KV_URL=your_kv_url
KV_REST_API_URL=your_kv_rest_api_url
KV_REST_API_TOKEN=your_kv_rest_api_token
KV_REST_API_READ_ONLY_TOKEN=your_kv_read_only_token

# Google Tag Manager - Get from https://tagmanager.google.com/
NEXT_PUBLIC_GOOGLE_TAG_MANAGER_ID=your_gtm_id 